<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/irrigationZoneItem"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clIZ"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_water">

        <ImageView
            android:id="@+id/ivIZLogo"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_house"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvIZNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/fragment_irrigation_zones_item_name"
            android:textColor="@color/gray_hint"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/ivIZLogo"
            app:layout_constraintTop_toTopOf="@+id/ivIZLogo"/>

        <TextView
            android:id="@+id/tvIZName"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/fragment_irrigation_zones_item_name_b"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/tvIZNameLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvIZNameLabel"
            tools:text="Campo de juego de Stamford Bridge londres" />

        <TextView
            android:id="@+id/tvIZIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/fragment_irrigation_zones_item_id"
            android:textColor="@color/gray_hint"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvIZId"
            app:layout_constraintBottom_toBottomOf="@+id/tvIZId"/>

        <TextView
            android:id="@+id/tvIZId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="@string/fragment_irrigation_zones_item_id_b"
            android:textColor="@color/gray_hint"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/tvIZIdLabel"
            app:layout_constraintTop_toBottomOf="@+id/ivIZLogo"
            tools:text="0b4d5e3e-dd37-4aa5-88cc-8887694ca115" />

        <ImageView
            android:id="@+id/ivCopyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_copy"
            app:layout_constraintStart_toEndOf="@id/tvIZId"
            app:layout_constraintTop_toTopOf="@+id/tvIZId"
            app:layout_constraintBottom_toBottomOf="@id/tvIZId"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>